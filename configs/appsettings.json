  },
  "Jwt": {
    "SecretKey": "test@test.com_____________________", 
    "Issuer": "WebAppIssuer",
    "Audience": "WebAppAudience"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Warning"
    },
    "NLog": {
      "IncludeScopes": true //true启用nlog  ，false 禁用
    }
  }
